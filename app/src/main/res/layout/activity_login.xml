<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/orange"
    tools:context=".Login">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/codehut_logo" />

    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Connecting all Coders"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_marginLeft="10dp"
        android:textSize="30sp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/logo"
        />

    <TextView
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="30dp"
        android:textColor="@color/white"
        android:textSize="27sp"
        android:layout_below="@+id/text1"
        />



    <EditText
        android:id="@+id/edt"
        android:ems="10"
        android:layout_width="280dp"
        android:layout_height="60dp"
        android:maxLength="15"
        android:hint=" Enter Phone Number"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:drawablePadding="10dp"
        android:drawableLeft="@drawable/baseline_phone_android_24"
        android:background="@drawable/rec"
        android:inputType="number"
        android:layout_below="@+id/text2"
        android:textColorHint="@color/black"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/otp_btn"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="SEND OTP"
        android:textSize="18sp"
        app:cornerRadius="30dp"
        android:backgroundTint="@color/white"
        android:layout_below="@id/edt"
        android:textColor="@color/orange"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"/>



    <ImageView
        android:id="@+id/boy"
        android:layout_width="300dp"
        android:layout_height="400dp"
        android:layout_marginBottom="-40dp"
        android:layout_alignParentBottom="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="Register | Contests | Win "
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold" />

    <ProgressBar
        android:id="@+id/phoneProgressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminateTint="@color/white"
        android:layout_above="@+id/edt"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="-70dp"
        />




</RelativeLayout>