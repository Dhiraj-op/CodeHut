<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Dashboard">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

<com.google.android.material.card.MaterialCardView
android:layout_width="match_parent"
    android:id="@+id/post1"
android:layout_height="250dp"
app:cardCornerRadius="15dp"
app:cardUseCompatPadding="true"
app:cardElevation="2dp">

<RelativeLayout
    android:id="@+id/eachshop"
    android:layout_width="match_parent"
    android:background="@color/black"
    android:layout_height="250dp"
    android:padding="5dp">


    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        app:cardCornerRadius="30dp"
        android:layout_margin="10dp">

        <ImageView
            android:id="@+id/logoIv"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/p2"
            android:scaleType="fitXY" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Leetcode 21st May"
        android:textSize="18sp"
        android:layout_toRightOf="@+id/rate"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_below="@+id/cardView"
        />
    <TextView
        android:id="@+id/rate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Weekly Contest"
        android:textSize="18sp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:textColor="@color/white"
        android:layout_below="@+id/cardView"

        />


</RelativeLayout>

</com.google.android.material.card.MaterialCardView>


        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:id="@+id/post2"
            android:layout_height="250dp"
            android:layout_below="@+id/post1"
            app:cardCornerRadius="15dp"
            app:cardUseCompatPadding="true"
            app:cardElevation="2dp">

            <RelativeLayout
                android:id="@+id/eachshop1"
                android:layout_width="match_parent"
                android:background="@color/black"
                android:layout_height="250dp"
                android:padding="5dp">


                <androidx.cardview.widget.CardView
                    android:id="@+id/cardView1"
                    android:layout_width="match_parent"
                    android:layout_height="170dp"
                    app:cardCornerRadius="30dp"
                    android:layout_margin="10dp">

                    <ImageView
                        android:id="@+id/logoIv1"
                        android:background="@color/white"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/p1"
                        android:scaleType="fitXY" />
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/rating1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CodeChef  17th May"
                    android:textSize="18sp"
                    android:layout_toRightOf="@+id/rate1"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:layout_below="@+id/cardView1"
                    />
                <TextView
                    android:id="@+id/rate1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Starters 90"
                    android:textSize="18sp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/white"
                    android:layout_below="@+id/cardView1"

                    />


            </RelativeLayout>

        </com.google.android.material.card.MaterialCardView>


        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:id="@+id/post3"
            android:layout_height="250dp"
            android:layout_below="@+id/post2"
            app:cardCornerRadius="15dp"
            app:cardUseCompatPadding="true"
            app:cardElevation="2dp">

            <RelativeLayout
                android:id="@+id/eachshop2"
                android:layout_width="match_parent"
                android:background="@color/black"
                android:layout_height="250dp"
                android:padding="5dp">


                <androidx.cardview.widget.CardView
                    android:id="@+id/cardView2"
                    android:layout_width="match_parent"
                    android:layout_height="170dp"
                    app:cardCornerRadius="30dp"
                    android:layout_margin="10dp">

                    <ImageView
                        android:id="@+id/logoIv2"
                        android:background="@color/white"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/p4"
                        android:scaleType="fitXY" />
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/rating2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="August 27th-29th"
                    android:textSize="18sp"
                    android:layout_toRightOf="@+id/rate2"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:layout_below="@+id/cardView2"
                    />
                <TextView
                    android:id="@+id/rate2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CODE-A-THON"
                    android:textSize="18sp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/white"
                    android:layout_below="@+id/cardView2"

                    />


            </RelativeLayout>

        </com.google.android.material.card.MaterialCardView>



        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:id="@+id/post4"
            android:layout_height="250dp"
            android:layout_below="@+id/post3"
            app:cardCornerRadius="15dp"
            app:cardUseCompatPadding="true"
            app:cardElevation="2dp">

            <RelativeLayout
                android:id="@+id/eachshop3"
                android:layout_width="match_parent"
                android:background="@color/black"
                android:layout_height="250dp"
                android:padding="5dp">


                <androidx.cardview.widget.CardView
                    android:id="@+id/cardView3"
                    android:layout_width="match_parent"
                    android:layout_height="170dp"
                    app:cardCornerRadius="30dp"
                    android:layout_margin="10dp">

                    <ImageView
                        android:id="@+id/logoIv3"
                        android:background="@color/white"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/p3"
                        android:scaleType="fitXY" />
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/rating3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="26th May"
                    android:textSize="18sp"
                    android:layout_toRightOf="@+id/rate3"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:layout_below="@+id/cardView3"
                    />
                <TextView
                    android:id="@+id/rate3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CODE HASTEN"
                    android:textSize="18sp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/white"
                    android:layout_below="@+id/cardView3"

                    />


            </RelativeLayout>

        </com.google.android.material.card.MaterialCardView>

    </RelativeLayout>
</ScrollView>