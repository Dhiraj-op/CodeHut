    <TextView
        android:id="@+id/user"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hi, Hrithik"
        android:layout_marginStart="5dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="24sp"/>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:cardCornerRadius="30dp"
        android:id="@+id/card_view"
        android:layout_margin="10dp"
        android:layout_below="@+id/user"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/p1"
            android:id="@+id/img" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/txt1"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enroll Courses"
        android:layout_marginStart="5dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_below="@id/card_view"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt1"
        android:id="@+id/courses"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="160dp"
            android:layout_height="160dp"
            app:cardCornerRadius="30dp"
            android:id="@+id/card_view1"
            app:strokeWidth="5dp"
            app:strokeColor="@color/black"
            android:layout_margin="10dp"
            android:layout_below="@+id/user">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/poster1"
                android:id="@+id/c1" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="160dp"
            android:layout_height="160dp"
            app:cardCornerRadius="30dp"
            android:id="@+id/card_view2"
            android:layout_margin="10dp"
            app:strokeWidth="5dp"
            app:strokeColor="@color/black"
            android:layout_below="@+id/user">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/poster2"
                android:id="@+id/c2" />
        </androidx.cardview.widget.CardView>


    </LinearLayout>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_below="@id/courses"
        android:layout_marginTop="15dp"
        android:layout_height="200dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:background="@color/grey"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="5dp"
                android:background="@drawable/box"
                android:src="@drawable/hackerrank"/>

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="5dp"
                android:background="@drawable/box"
                android:src="@drawable/codechef"/>

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="5dp"
                android:background="@drawable/box"
                android:src="@drawable/gfg"/>

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="5dp"
                android:background="@drawable/box"
                android:src="@drawable/codeforces"/>

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="5dp"
                android:background="@drawable/box"
                android:src="@drawable/topcoder"/>

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="5dp"
                android:background="@drawable/box"
                android:src="@drawable/leetcode"/>



        </LinearLayout>
    </HorizontalScrollView>




</RelativeLayout>